<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HomePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/snavbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="》"
                    android:textSize="30sp"/>

                <com.liji.circleimageview.CircleImageView
                    android:id="@+id/img_usertx"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_margin="5dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="标题"
                android:textSize="20sp"
                android:visibility="gone"
                android:textColor="#000000"/>

            <LinearLayout
                android:id="@+id/ly_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="visible">

                <EditText
                    android:background="@drawable/et_boder"
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:maxWidth="150dp"
                    android:gravity="center"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/bt_search"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:text="搜索"
                    android:textSize="5sp"
                    android:layout_margin="5dp"
                    android:background="@drawable/selector_bt_bg_compose_red"/>
            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:src="@drawable/msg_on"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/fragment_martch"
                style="@style/homepage_footer">
                <ImageView
                    android:id="@+id/fragment_img_martch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/all_team_on"/>
                <TextView
                    android:id="@+id/tv_fragment_martch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赛事推荐"
                    android:textColor="@color/click"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_allteam"
                style="@style/homepage_footer">
                <ImageView
                    android:id="@+id/fragment_img_alltem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/all_team_off"/>
                <TextView
                    android:id="@+id/tv_fragment_allteam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="组队大厅"
                    android:textColor="#8a8a8a"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_myteam"
                style="@style/homepage_footer">
                <ImageView
                    android:id="@+id/fragment_img_myteam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/all_team_off"/>
                <TextView
                    android:id="@+id/tv_fragment_myteam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的队伍"
                    android:textColor="#8a8a8a"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_dynmic"
                style="@style/homepage_footer">

                <ImageView
                    android:id="@+id/fragment_img_dynmic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/all_team_off" />
                <TextView
                    android:id="@+id/tv_fragment_dynmic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"
                    android:textColor="#8a8a8a"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_head"
        app:menu="@menu/nav_menu"

        >

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>