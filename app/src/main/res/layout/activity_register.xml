<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.RegisterActivity"
    android:background="@drawable/selector_bt_bg_compose_red">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="#50D6D5B7">
        <Button
            style="@style/btn_finish_ac"
            android:onClick="closeActivity"
            android:layout_margin="10dp"/>

        <TextView
            style="@style/head_nav_textview"
            android:text="注册"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/et_username"
            style="@style/regist_et_boder"
            android:hint="手机号" />

        <EditText
            android:id="@+id/et_pswd"
            style="@style/regist_et_boder"
            android:layout_marginTop="20dp"
            android:hint="密码" />

        <EditText
            android:id="@+id/et_surepswd"
            style="@style/regist_et_boder"
            android:layout_marginTop="20dp"
            android:hint="确认密码" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_testcode"
                style="@style/regist_et_boder"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:hint="验证码" />

            <Button
                style="@style/ownColorbyZD"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:textColor="#50000000"
                android:text="获取验证码"
                android:onClick="getMassgeCode"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_regist"
        style="@style/ownColorbyZD"
        android:layout_width="300dp"
        android:layout_marginTop="40dp"
        android:onClick="postregister"
        android:text="注                   册"
        android:textSize="15sp"
        android:layout_gravity="center"/>


</LinearLayout>