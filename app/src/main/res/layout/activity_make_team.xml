<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MakeTeamActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="#50D6D5B7">
        <Button
            style="@style/btn_finish_ac"
            android:onClick="closeActivity"
            android:layout_margin="10dp"/>

        <TextView
            style="@style/head_nav_textview"
            android:text="创建队伍"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp">

        <TextView
            style="@style/textSize20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="队伍名称" />

        <EditText
            android:id="@+id/et_teamname"
            style="@style/et_update_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            style="@style/textSize20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="队伍简介" />

        <EditText
            android:id="@+id/et_teamintro"
            style="@style/textSize20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_boder_gray"
            android:minLines="4"
            android:gravity="top"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10">

        <TextView
            style="@style/textSize20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招募人数" />

        <EditText
            android:id="@+id/et_teamnum"
            style="@style/textSize20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入范围1-30"
            android:inputType="number"
            android:background="@drawable/tv_boder_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10">

        <TextView
            style="@style/textSize20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间" />

        <TextView
            android:id="@+id/tv_maketeam_time"
            style="@style/textSize20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:background="@drawable/tv_boder_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            style="@style/textSize20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="队伍标签" />

        <EditText
            android:id="@+id/et_teamlable"
            style="@style/textSize20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:background="@drawable/tv_boder_gray"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_maketeam"
        style="@style/ownColorbyZD"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:text="创  建"
        android:onClick="makeNewTeam"
        android:textSize="15sp" />
</LinearLayout>