<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/selector_bt_bg_compose_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="#50ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="申 请   加  入"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_40"/>
        <Button
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/bt_applycancel"
            android:background="@drawable/btn_cancel"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_applyuname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_boder"
        android:gravity="center"
        android:hint="申请人" />

    <TextView
        android:id="@+id/tv_applytname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_boder"
        android:gravity="center"
        android:hint="队伍名称" />


    <EditText
        android:id="@+id/et_applyteamreason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/et_boder"
        android:hint="申请理由..."
        android:minLines="4"
        android:maxLines="4"
        android:textSize="15sp"
        android:padding="5dp"
        android:gravity="top"/>

    <Button
        style="@style/ownColorbyZD"
        android:id="@+id/bt_applyteam"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="提交申请" />

</LinearLayout>